# -*- coding: utf-8 -*-
# vim: ft=yaml
# yamllint disable rule:comments-indentation
---
gitea:
    # Request a specific version or leave 'latest', which will
    # resolve when running the state.
    # Updates are possible by changing the version. Latest
    # will do that automatically on subsequent runs.
  version: latest

    # Since this formula skips the web installer,
    # the database configuration is required. This is just
    # an example. All specified values will be dumped into the
    # global configuration file.
  database:
    db_type: sqlite3
    name: gitea
    password: hunter1
    user: root

    # (Some of) those secrets would be generated by the web installer.
    # Specify them here explicitly or let Salt handle their generation.
    # In the latter case, they will be saved in a grain value on the minion.
  secrets:
    internal_token: ''
    jwt_secret: ''
    lfs_jwt_secret: ''
    secret_key: ''

    # Service configuration allows to request mount paths or
    # other service units. This is especially important if you
    # run a local database server. Example: If you run mariadb
    # on localhost, specify wants: ['mariadb'] (or however the
    # unit is called, without `.service` suffix).
  service:
    requires_mount: []
    wants: []

    # This is the custom configuration. Values in `default` are dumped
    # without an associated scope. For possible configuration values,
    # see the official docs or the example file.
    # It is recommended to keep all the keys lowercase to avoid
    # issues with some autoconfiguration done by this formula.
  config:
    default:
      app_name: Gitea
      run_mode: prod
      run_user: git

    log:
      level: Info
      mode: console
      stacktrace_level: None

    repository.signing:
      signing_key: default

    server:
      domain: localhost
      http_addr: 0.0.0.0
      http_port: 3000
      protocol: http

    # This is where a lot of the default parameters are looked up.
    # You should not need to change these values, except for changing
    # the default paths.
  lookup:
    gpg:
      key: 7C9E68152594688862D62AF62D9AE806EC1592E2
      keyserver: keys.openpgp.org
    group: git
    paths:
      bin: /opt/gitea
      conf: /etc/opt/gitea
      custom: /var/opt/gitea/custom
      data: /var/opt/gitea/data
      home: /var/opt/gitea/home
      internal_token_uri: file:///etc/opt/gitea/internal_token
      log: /var/opt/gitea/log
      repos: /var/opt/gitea/data/gitea-repositories
      work: /var/opt/gitea
    pkg:
      latest: https://dl.gitea.io/gitea/version.json
      sig: https://dl.gitea.io/gitea/{version}/gitea-{version}-linux-{arch}.asc
      source: https://dl.gitea.io/gitea/{version}/gitea-{version}-linux-{arch}
      source_hash: https://dl.gitea.io/gitea/{version}/gitea-{version}-linux-{arch}.sha256  # yamllint disable-line rule:line-length
    requirements:
      - git
      - gpg
      - python-gnupg
    shell: /bin/bash
    user: git

  tofs:
      # The files_switch key serves as a selector for alternative
      # directories under the formula files directory. See TOFS pattern
      # doc for more info.
      # Note: Any value not evaluated by `config.get` will be used literally.
      # This can be used to set custom paths, as many levels deep as required.
    files_switch:
      - any/path/can/be/used/here
      - id
      - roles
      - osfinger
      - os
      - os_family

      # All aspects of path/file resolution are customisable using the options below.
      # This is unnecessary in most cases; there are sensible defaults.
      # Default path: salt://< path_prefix >/< dirs.files >/< dirs.default >
      # I.e.: salt://gitea/files/default
      # path_prefix: template_alt
      # dirs:
      #   files: files_alt
      #   default: default_alt
      # The entries under `source_files` are prepended to the default source files
      # given for the state
    source_files:
      gitea-config-file-file-managed:
        - 'app_alt.ini'
        - 'app_alt.ini.jinja'
